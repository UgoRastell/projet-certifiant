{% extends 'base.html.twig' %}

{% block title %}Tutoriel{% endblock %}

{% block body %}
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="embed-responsive embed-responsive-16by9 d-flex justify-content-center">
                            <iframe class="embed-responsive-item align-self-center" src="{{ asset('uploads/fichiers/' ~ tutoriel.fichierPDF) }}"></iframe>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <p class="small">{{ tutoriel.getCategoryNames() }}</p>
                            </div>
                            <h5 class="mb-0">{{ tutoriel.titre }}</h5>
                            <p class="text-dark mb-0">{{ tutoriel.description }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_tutoriel_index') }}" class="btn btn-secondary">Back to list</a>
                            <a href="{{ path('app_tutoriel_finish', {'id': tutoriel.id}) }}" class="btn btn-primary">Finish</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
